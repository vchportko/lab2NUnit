@model MenuOnWebFinal.Models.EditUserViewModel
@{
    ViewBag.Title = @Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Eedit1);
}

<div class="form-page">
    <div class="form-page--content">
        <div class="form-page--header">
            <span>@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Eedit2)</span>
        </div>
        <div class="form-page--container">
            @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-page--form", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                <label for="login">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Eedit3)</label>
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                <label for="mail">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Eedit4)</label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                <label for="phone_number">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Eedit5)</label>
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.ImageFile)
                    <label class="col-md-6 input-group">
                        <input type="file" id="ImageFile" name="ImageFile" class="form-control">
                        <span class="input-group-addon">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Eedit6)</span>
                    </label>
                </div>
                <button type="submit" class="button -dark-blue -darker-hover">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Eedit7)</button>
            }
        </div>
    </div>
</div>