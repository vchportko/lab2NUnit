@model MenuOnWebFinal.Models.SendCodeViewModel
@{
    ViewBag.Title = @Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.SendCode1);
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.SendCode2)</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.SendCode3)
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
