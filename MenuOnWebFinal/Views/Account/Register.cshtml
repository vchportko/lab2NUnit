@model MenuOnWebFinal.Models.RegisterViewModel
@{
    ViewBag.Title = @Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Register1);
}

<div class="form-page">
    <div class="form-page--content">
        <div class="form-page--header">
            <span>@ViewBag.Title</span>
        </div>
        <div class="form-page--container">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-page--form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <label for="login">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Register2)</label>
                <input type="text" name="Login" id="login">
                <label for="mail">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Register3)</label>
                <input type="text" name="Email" id="mail">
                <label for="password">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Register4)</label>
                <input type="password" name="Password" id="password">
                <label for="cpassword">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Register5)</label>
                <input type="password" name="ConfirmPassword" id="cpassword">
                <label for="phone_number">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Register6)</label>
                <input type="text" name="PhoneNumber" id="phone_number">
                <div class="form-group row">
                    @Html.LabelFor(model => model.ImageFile)
                    <label class="col-md-6 input-group">
                        <input type="file" id="ImageFile" name="ImageFile" class="form-control">
                        <span class="input-group-addon">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Register7)</span>
                    </label>
                </div>
                <button type="submit" class="button -dark-blue -darker-hover">@Html.Raw(MenuOnWebFinal.Resources.EnglishTexts.Register8)</button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
